@model IEnumerable<FilmsC.Models.Film>

@{
    ViewBag.Title = "Главная"; // DateTime.Now.Date.ToString("dd.MM.yyyy");
}

<h2>Каталог</h2>

<p>
    @Html.ActionLink("Добавить фильм", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Постер
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Poster)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PosterName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentType)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Poster == null || item.Poster.Length <= 1)
            {
                //Выводим пустое место
                <span>Постер</span>
            }
            else
            {
                //Выводим картинку
                string imgurl = "data:" + item.ContentType + ";base64," + Convert.ToBase64String(item.Poster);
                <img src=@imgurl width="80" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner)
        </td>

        @*<td>
                @Html.DisplayFor(modelItem => item.PosterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContentType)
            </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
    }

</table>
